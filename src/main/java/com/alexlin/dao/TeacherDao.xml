<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alexlin.dao.TeacherDao">
    <select id="findAll" resultType="Teacher">
        select * from teacher;
    </select>
    <insert id="addTeacher" parameterType="Teacher">
        insert into teacher(t_name,t_password)
        values(#{t_name},#{t_password});
    </insert>
    <delete id="deleteTeacher" parameterType="Integer">
        delete from teacher where t_id = #{id};
    </delete>
    <update id="updateTeacher" parameterType="Teacher">
        update teacher
        set t_name=#{t_name},t_password=#{t_password},s_count=#{s_count}
        where t_id  = #{t_id};
    </update>
    <select id="findTeacherById" parameterType="Integer" resultType="Teacher">
        select * from teacher where t_id = #{id};
    </select>
</mapper>